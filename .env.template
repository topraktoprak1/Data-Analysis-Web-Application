# Docker Environment Configuration
# Copy this file to .env and customize for your environment
# IMPORTANT: Never commit .env to version control!

# ======================
# Database Configuration
# ======================
POSTGRES_DB=veri_analizi
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme_to_strong_password

# ======================
# Application Configuration
# ======================
# Generate a strong secret key with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=changeme_to_random_secret_key_64_chars_long

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=0

# ======================
# Port Configuration
# ======================
# Change these if ports are already in use on your machine
DB_PORT=5432
BACKEND_PORT=5000
FRONTEND_PORT=80

# ======================
# Admin User (First Run)
# ======================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
