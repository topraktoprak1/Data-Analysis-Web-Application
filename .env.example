# Security Configuration
# IMPORTANT: Copy this file to .env and set your own values
# Never commit .env to version control!

# Generate a strong secret key with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-generated-secret-key-here

# Database Configuration (when using PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/veri_analizi

# Session Configuration
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_LIFETIME=3600  # Session timeout in seconds (1 hour)

# Admin User (for initial setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123  # Change this immediately!

# Flask Configuration
FLASK_ENV=development  # Change to 'production' in production
FLASK_DEBUG=False  # Set to False in production
